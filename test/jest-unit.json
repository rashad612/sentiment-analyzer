{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "@application(.*)$": "<rootDir>/../src/application$1",
    "@domain(.*)$": "<rootDir>/../src/domain$1",
    "@infrastructure(.*)$": "<rootDir>/../src/infrastructure$1"
  }
}